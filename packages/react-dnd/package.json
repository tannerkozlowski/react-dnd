		"hoist-non-react-statics": "^2.5.0",
		"invariant": "^2.1.0",
		"lodash": "^4.17.10",
		"prop-types": "^15.6.1",
		"shallowequal": "^1.0.2"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-loader": "^7.1.1",
		"npm-run-all": "^4.1.2",
